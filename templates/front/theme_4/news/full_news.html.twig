{% extends 'front/theme_4/base.html.twig' %}

{% block title %}
    {{ article.title }}
{% endblock %}

{% block body %}
    <div class="list">
        <div class="row row-article">
            <div class="article-container">
                <div class="item item-main -theme-white">
                    <div class="item-container">
                        <div class="item-cover">
                            <div class="item-cover-thumb"><img src="{{ news_cropped_image_link }}"
                                                               class="item-cover-img"
                                                               alt="{{ article.title }}">
                                <img src="{{ news_cropped_image_link }}" class="item-cover-blur">
                                <div class="item-cover-mask"></div>
                            </div>
                        </div>
                        <div class="item-content item-content_article">
                            <div class="item-category"></div>
                            <div class="item-title -font-lg">
                                <span class="item-link-text">{{ article.title }}</span>
                            </div>
                        </div>
                    </div>
                    <div class="item-body">
                        <div class="item-body-stat">
                            <span>сегодня</span>
                        </div>
                        <div class="js-content ">
                            <div id="articleContainer">
                                {{  article_full_description | raw }}
                            </div>
                            <div id="load_content0">
                                {% for teaser in teasers | filter((v, k) => v.id != article.id) | slice (0, 1) %}
                                    <div class="item">
                                        <a href="{{ teasers_click_counter_link(teaser, article, {'pageType': 'full'})}}" style="text-decoration: none; color: inherit;"
                                           target="_blank">
                                            <div class="item-container_small">
                                                <div class="item-cover_small">
                                                    <picture>
                                                        <img src="{{ generate_preview_link(teaser.fileName, 'teaser',  width_teaser_block, height_teaser_block) }}"
                                                             class="item-cover-img_small"></picture>
                                                </div>
                                                <div class="item-title_small">
                                                    <div class="item-link_small">
                                                        <span class="item-link-text">{{ get_city(teaser.text, city) | raw }}</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                            <div id="load_content1">
                                {% for teaser in teasers | filter((v, k) => v.id != article.id) | slice (1, 1) %}
                                    <div class="item">
                                        <a href="{{ teasers_click_counter_link(teaser, article, {'pageType': 'full'})}}" style="text-decoration: none; color: inherit;"
                                           target="_blank">
                                            <div class="item-container_small">
                                                <div class="item-cover_small">
                                                    <picture>
                                                        <img src="{{ generate_preview_link(teaser.fileName, 'teaser',  width_teaser_block, height_teaser_block) }}"
                                                             class="item-cover-img_small"></picture>
                                                </div>
                                                <div class="item-title_small">
                                                    <div class="item-link_small">
                                                        <span class="item-link-text">{{ get_city(teaser.text, city) | raw }}</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                            <br>
                        </div>
                        <div class="item-body-stat" style="margin-top: 16px; margin-bottom: 0px;">
{#                            <span>Источник: <a href="{{ article.sourceLink }}"#}
{#                                               style="text-decoration: none; color: inherit" target="_blank">{{ article.sourceLink | split( '/' )[2] }}</a></span>#}
                        </div>
                        <div class="item-body-more">
                            <a href="/" class="more-news-button js-show-more" target="_blank">БОЛЬШЕ
                                НОВОСТЕЙ</a>
                        </div>
                        <div class="item-body-share">
                            <div class="icon icon-lupa-bg" style="display: block; margin-right: auto"
                                 onclick="Share.vk('{{ app.request.getBaseUrl ~ app.request.getPathInfo }}', '{{ article.title }}')">
                                <div class="icon icon-lupa" style="display: block"></div>
                            </div>
                            <div class="icon icon-ok-bg" style="display: block; margin-right: auto"
                                 onclick="Share.ok('{{ app.request.getBaseUrl ~ app.request.getPathInfo }}', '{{ article.title }}')">
                                <div class="icon icon-ok" style="display: block"></div>
                            </div>
                            <div class="icon icon-vb-bg" style="display: block; margin-right: auto"
                                 onclick="Share.viber('{{ app.request.getBaseUrl ~ app.request.getPathInfo }}', '{{ article.title }}')">
                                <div class="icon icon-vb" style="display: block"></div>
                            </div>
                            <div class="icon icon-wa-bg" style="display: block; margin-right: auto"
                                 onclick="Share.whatsapp('{{ app.request.getBaseUrl ~ app.request.getPathInfo }}', '{{ article.title }}')">
                                <div class="icon icon-wa" style="display: block"></div>
                            </div>
                        </div>
                        <div class="item-body-news">
                            <div class="topic-title">Смотрите также:</div>
                            <div class="topic-list">
                                {% for teaser in teasers | filter((v, k) => v.id != article.id) | slice (2, 4)%}
                                    <a href="{{ teasers_click_counter_link(teaser, article, {'pageType': 'full'})}}"
                                       class="link" target="_blank">— {{ get_city(teaser.text, city) | raw }}</a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="aside-container">
                <div id="load_aside">
                    {% for teaser in teasers | filter((v, k) => v.id != article.id) | slice (6, 5)%}
                        <div class="item -theme-white">
                            <a href="{{ teasers_click_counter_link(teaser, article, {'pageType': 'full'})}}" style="text-decoration: none;" target="_blank">
                                <div class="item-container">
                                    <div class="item-cover">
                                        <div class="item-cover-thumb">
                                            <picture>
                                                <img src="{{ generate_preview_link(teaser.fileName, 'teaser',  width_teaser_block, height_teaser_block) }}"
                                                     class="item-cover-img"></picture>
                                            <picture>
                                                <img src="{{ generate_preview_link(teaser.fileName, 'teaser',  width_teaser_block, height_teaser_block) }}"
                                                     class="item-cover-blur"></picture>
                                            <div class="item-cover-mask"
                                                 style="background-image: linear-gradient(-180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 55%, rgba(0, 0, 0, 0.91) 88%, rgb(0, 0, 0) 100%);"></div>
                                        </div>
                                    </div>
                                    <div class="item-content">
                                        <div class="item-category">
                                        </div>
                                        <div class="item-title" style="color: rgb(249, 249, 249);">
                                            <div class="item-link">
                                                <span class="item-link-text">{{ get_city(teaser.text, city) | raw }}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="row" id="load_main">
            {% set someSizeControlVal = 1 %}
            {% set someSize = '-size-s' %}

            {% for item in teasers | filter((v, k) => v.id != article.id) | slice(11) %}
                {% if someSizeControlVal < 7 %}
                    {% set someSize = '-size-s' %}
                    {% set someSizeControlVal = someSizeControlVal + 1 %}
                {% elseif someSizeControlVal == 7 %}
                    {% set someSize = '-size-m' %}
                    {% set someSizeControlVal = someSizeControlVal + 1 %}
                {% else %}
                    {% set someSize = '-size-m' %}
                    {% set someSizeControlVal = 1 %}
                {% endif %}

                <div class="item {{ someSize }} -theme-white">
                    <a href="{{ teasers_click_counter_link(item, article, {'pageType': 'full'})}}" style="text-decoration: none;" target="_blank">
                        <div class="item-container">
                            <div class="item-cover">
                                <div class="item-cover-thumb">
                                    <img src="{{ generate_preview_link(item.fileName, 'teaser',  width_teaser_block, height_teaser_block) }}"
                                         class="item-cover-img">
                                    <img src="{{ generate_preview_link(item.fileName, 'teaser',  width_teaser_block, height_teaser_block) }}"
                                         class="item-cover-blur">
                                    <div class="item-cover-mask"
                                         style="background-image: linear-gradient(-180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 55%, rgba(0, 0, 0, 0.91) 88%, rgb(0, 0, 0) 100%);"></div>
                                </div>
                            </div>
                            <div class="item-content">
                                <div class="item-category">
                                </div>
                                <div class="item-title" style="color: rgb(249, 249, 249);">
                                    <div class="item-link">
                                        <span class="item-link-text">{{ get_city(item.text, city) | raw }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
            <div class="item-fourth" id="place_for_teasers">
                <input id="article_id" type="hidden" value="{{ article.id }}"/>
            </div>
        </div>
        <div class="loading clearfix">
            <div id="load_gif" style="display: none;">
                <img src="{{ asset('assets/theme_5/static/images/load.gif') }}" style="margin: 0 auto;">
            </div>
            <span id="load_more" class="more-news-button" style="margin: 8px auto 12px; display: block;">Показать больше!</span>
        </div>
        <p align="center" id="loading" style="display: none;">
            <img src="{{ asset('assets/theme_1/static/images/load.gif') }}" alt="Loading…">
        </p>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/front/js/theme_5/both_for_full_and_short_news_script.js') }}?v={{ get_env('JS_VERSION') }}"></script>
    <script src="{{ asset('assets/theme_5/static/js/script.js') }}?v={{ get_env('JS_VERSION') }}"></script>
{% endblock %}

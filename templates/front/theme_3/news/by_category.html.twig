{% extends 'front/theme_3/base.html.twig' %}

{% block title %}
    {{ newsCategory }}
{% endblock %}

{% block body %}
    <div class="container" id="containerOnPage">
        <div id="grid" class="news row">
            <input id="slug" type="hidden" value="{{ (app.request.getBaseUrl ~ app.request.getPathInfo) | slice( 12 ) }}"/>
            {% set val_for_col = (news | length) / 4 %}
            <div class="all-news-block">
                <div class="first_col">
                    {% for item in news | slice (0, 3) %}
                        <div class="grid-item item item-news">
                            <a class="teaser teaser-news" href="{{ news_click_counter_link(item, {'pageType': 'category'}) }}"
                               target="_blank" style="background: rgb(190, 148, 192);">
                                <div class="teaser-image">
                                    <div class="background"
                                         style="background: linear-gradient(0deg, rgb(190, 148, 192) 0px, transparent 100%);"></div>
                                    <img src="{{ generate_preview_link(item.fileName, 'news',  width_news_block, height_news_block ) }}">
                                </div>
                                <div class="teaser-title" style="color: #212121;">
                                    {{ item.title }}
                                </div>
                                <div class="category" style="color: #212121; background: rgb(190, 148, 192);">
                                    Тип новости
                                </div>
                                <div class="button" style="display: none">
                                    <div class="read-more">
                                        Подробнее
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
                <div class="second_col">

{% extends 'front/theme_1/base.html.twig' %}

{% block title %}
    Все тизеры
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/theme_1/static/css/style.css') }}?v={{ get_env('CSS_VERSION') }}" rel="stylesheet">
    <link href="{{ asset('assets/theme_1/static/css/burger_menu.css') }}?v={{ get_env('CSS_VERSION') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="main row">
        <div class="content-columns clearfix">
            <div class="all-column">

                <ul class="list-all" id="load_main">

                    {% for teaser in teasers %}
                        <li>
                            <a href="{{ teasers_click_counter_link(teaser, null, {'pageType': 'top'})}}" target="_blank">
                                <span class="visual">
                                    <img src="{{ generate_preview_link(teaser.fileName, 'teaser',  width_teaser_block, height_teaser_block ) }}" alt="">
                                </span>
                                <h2>{{ get_city(teaser.text, city) | raw }}</h2>
                            </a>
                        </li>
                    {% endfor %}

                </ul>
            </div>
            <p align="center" id="loading" style="display: none;">
                <img src="{{ asset('assets/theme_1/static/images/load.gif') }}" alt="Loading…">
            </p>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/front/js/theme_1/teasers_script.js') }}?v={{ get_env('JS_VERSION') }}"></script>
{% endblock %}
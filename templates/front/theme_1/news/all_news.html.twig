{% extends 'front/theme_1/base.html.twig' %}

{% block title %}
    Все новости
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/theme_1/static/css/style.css') }}?v={{ get_env('CSS_VERSION') }}" rel="stylesheet">
    <link href="{{ asset('assets/theme_1/static/css/burger_menu.css') }}?v={{ get_env('CSS_VERSION') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="w1">
            <div class="main row">
                <div class="content-columns clearfix">
                    <div class="all-column">

                        <ul class="list-all" id="load_main">

                            {% for item in news %}
                                <li>
                                    <a href="{{ news_click_counter_link(item, {'pageType': 'top'}) }}" target="_blank"><span class="visual"><img
                                                    src="{{ generate_preview_link(item.fileName, 'news',  width_news_block, height_news_block ) }}"
                                                    alt="{{ item.title }}"></span>
                                        <h2>{{ item.title }}</h2></a>
                                </li>
                            {% endfor %}

                        </ul>
                    </div>
                    <p align="center" id="loading" style="display: none;">
                        <img src="{{ asset('assets/theme_1/static/images/load.gif') }}" alt="Loading…">
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/front/js/theme_1/top_news_script.js') }}?v={{ get_env('JS_VERSION') }}"></script>
{% endblock %}

